<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_card"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaults"
            android:textSize="16dp"
            android:theme="@style/text1Theme" />

        <LinearLayout
            android:id="@+id/layout_egg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shop_green"
            android:gravity="center">

            <ImageView
                android:id="@+id/egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="10dp"
                android:src="@drawable/egg_0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/required_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="609"
                android:textSize="16dp"
                android:theme="@style/text0Theme" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/egg_0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>